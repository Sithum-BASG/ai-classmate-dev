{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "singleProjectMode": true,
    "hub": { "port": 4400 },
    "ui": { "enabled": true, "port": 4000 },
    "auth": { "port": 9099 },
    "firestore": { "port": 8080 },
    "storage": { "port": 9199 },
    "pubsub": { "port": 8085 },
    "functions": { "port": 5001 },
    "eventarc": { "port": 9299 },
    "logging": { "port": 4500 },
    "exportOnExit": true,
    "import": ".emulator-data"
  }
}

